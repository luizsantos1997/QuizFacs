<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
    BackgroundColor="#1774f5"
    xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="QuizFacs.Pages.QuizPageLoading">


    <StackLayout
            HorizontalOptions="Center"
        VerticalOptions="Center"
            >
        <Label
            FontSize="Title"
            Text="Carregando Pergunta"
            Margin="10,0,10,20"
            TextColor="White"
            x:Name="Text"
            />
        <ActivityIndicator
            HorizontalOptions="Center"
            VerticalOptions="Center"
            IsRunning="True"
            IsVisible="True"
            Color="White"
            x:Name="Loading"
            />


    </StackLayout>

</ContentPage>
